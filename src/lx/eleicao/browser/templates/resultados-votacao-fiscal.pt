<!DOCtype html>
<html lang="en" metal:use-macro="context/main_template/macros/master">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Document</title>
</head>
<body metal:fill-slot="main">

<div id="ajuste_tela" metal:define-macro="resultado_fiscal">
<script src="++resource++lx.eleicao/Chart.min.js"></script>
    <h1>Resultados da Eleição</h1>
    <h2>Conselho Fiscal</h2>
    <hr/>
    <br/><br/>
    <div class="resultado_content" tal:define="caminho string:/sistema-votacao/eleicao-conselho-fiscal/urna">
        <div class="resultados_votacao" >
            <ul>
                <li>Votos chapa única: <b tal:content="python: view.votosChapas('chapa-unica', caminho)"></b></li>
                <li>Votos nulos: <b tal:content="python: view.votosNulos(caminho)"></b></li>
                <li>Total de votos: <b tal:content="python: view.votosTotal(caminho)"></b></li>
            </ul>
        </div>
        <div class="grafico">
            <canvas id="myChartFiscal" width="200" height="200"></canvas>
        </div>
    

<tal:lt replace="structure string:&lt;" />script>

var ctx = document.getElementById('myChartFiscal').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'pie',
    data: {
        labels: ['NULO', 'CHAPA ÚNICA'],
        datasets: [{
            label: '# of Votes',
            data: [<tal:script replace="structure python: view.votosNulos(caminho)" />,
                   <tal:script replace="structure python: view.votosChapas('chapa-unica', caminho)" />],
            backgroundColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
          
            ],
            
            borderWidth: 1
        }]
    },
    options: {
       
    }
});

<tal:lt replace="structure string:&lt;" />/script>

</div>



</div>
</body>
</html>
